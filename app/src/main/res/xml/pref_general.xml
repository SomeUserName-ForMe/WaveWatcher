<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:title="@string/pref_display_units"
        android:summary="@string/pref_display_units_summary"
        android:key="@string/pref_display_units_key"
        android:defaultValue="@string/pref_display_units_default"
        android:entries="@array/pref_units_list_titles"
        android:entryValues="@array/pref_units_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:title="@string/pref_location"
        android:summary="@string/pref_location_summary"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:entries="@array/pref_location_titles"
        android:entryValues="@array/pref_location_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
